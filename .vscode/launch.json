{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug @appointment-booking/backend-ts with Nx",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["nx", "serve", "@appointment-booking/backend-ts"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/backend-ts/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "java",
      "request": "launch",
      "name": "Debug backend-java (Spring Boot)",
      "mainClass": "com.pearthoughts.appointmentbooking.AppointmentBookingApplication",
      "projectName": "backend-java",
      "envFile": "${workspaceFolder}/apps/backend-java/.env",
      "console": "integratedTerminal"
    }
  ]
}
